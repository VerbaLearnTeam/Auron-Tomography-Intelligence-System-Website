generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AllowlistStatus {
  approved
  revoked
}

enum InviteeType {
  physician
  partner
  investor
  other
}

enum AccessRequestStatus {
  pending
  approved
  rejected
}

model AllowlistEntry {
  id              String          @id @default(cuid())
  email           String
  emailNormalized String          @unique
  status          AllowlistStatus @default(approved)
  inviteeType     InviteeType     @default(other)
  notes           String?
  invitedBy       String?
  createdAt       DateTime        @default(now())
  approvedAt      DateTime?
  revokedAt       DateTime?
  lastLoginAt     DateTime?

  @@index([emailNormalized])
  @@index([status])
  @@map("allowlist_entries")
}

model AccessRequest {
  id              String               @id @default(cuid())
  fullName        String
  email           String
  emailNormalized String
  role            String
  specialty       String?
  institution     String
  countryRegion   String
  evaluationGoal  String
  availability    String?

  ackPrototypeNotMedicalAdvice Boolean
  ackNoSharing               Boolean

  status     AccessRequestStatus @default(pending)
  createdAt  DateTime            @default(now())
  reviewedAt DateTime?
  reviewedBy String?

  @@index([emailNormalized])
  @@index([status])
  @@index([createdAt])
  @@map("access_requests")
}

// Auth.js models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
